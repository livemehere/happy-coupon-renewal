<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F6F8"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    tools:context=".passwordActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="12"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"

        >

        <ImageView
            android:layout_weight="6"
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/logo"
            tools:layout_editor_absoluteX="27dp"
            tools:layout_editor_absoluteY="30dp" />

        <Button

            android:id="@+id/btnHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_marginRight="5dp"
            android:onClick="navToHome"
            android:text="홈"
            android:textStyle="bold"
            app:backgroundTint="#FF9960" />

        <Button

            android:id="@+id/btnExit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_marginLeft="5dp"
            android:onClick="finishApp"
            android:text="종료"
            android:textStyle="bold"
            app:backgroundTint="#FF9960" />

    </LinearLayout>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="비밀번호를 입력하세요"
        android:gravity="center"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginBottom="40dp"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp"
        >

        <ImageView
            android:id="@+id/aster1"
            android:layout_weight="1"
            android:layout_width="80dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/aster"
            android:visibility="invisible"
            />
        <ImageView
            android:id="@+id/aster2"
            android:layout_weight="1"
            android:layout_width="80dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/aster"
            android:visibility="invisible"
            />
        <ImageView
            android:id="@+id/aster3"
            android:layout_weight="1"
            android:layout_width="80dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/aster"
            android:visibility="invisible"
            />
        <ImageView
            android:id="@+id/aster4"
            android:layout_weight="1"
            android:layout_width="80dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/aster"
            android:visibility="invisible"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="20dp"

        >

        <ImageView
            android:layout_weight="1"
            android:layout_width="80dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/underline"
            />
        <ImageView
            android:layout_weight="1"
            android:layout_width="80dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/underline"
            />
        <ImageView
            android:layout_weight="1"
            android:layout_width="80dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/underline"
            />
        <ImageView
            android:layout_weight="1"
            android:layout_width="80dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/underline"
            />


        </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"

        >

        <TableRow
            android:gravity="center"
            android:layout_marginBottom="10dp"
            >
            <TextView
                android:text="1"
                android:textSize="30dp"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:background="@color/primary"
                android:textColor="@color/white"
                android:onClick="clickPad"
                android:layout_column="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />
            <TextView
                android:text="2"
                android:textSize="30dp"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:background="@color/primary"
                android:textColor="@color/white"
                android:onClick="clickPad"
                android:layout_column="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />
            <TextView
                android:text="3"
                android:textSize="30dp"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:background="@color/primary"
                android:textColor="@color/white"
                android:onClick="clickPad"
                android:layout_column="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />
        </TableRow>
        <TableRow
            android:gravity="center"
            android:layout_marginBottom="10dp"
            >
            <TextView
                android:text="4"
                android:textSize="30dp"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:background="@color/primary"
                android:textColor="@color/white"
                android:onClick="clickPad"
                android:layout_column="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />
            <TextView
                android:text="5"
                android:textSize="30dp"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:background="@color/primary"
                android:textColor="@color/white"
                android:onClick="clickPad"
                android:layout_column="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />
            <TextView
                android:text="6"
                android:textSize="30dp"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:background="@color/primary"
                android:textColor="@color/white"
                android:onClick="clickPad"
                android:layout_column="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />
        </TableRow>
        <TableRow
            android:gravity="center"
            android:layout_marginBottom="10dp"
            >
            <TextView
                android:text="7"
                android:textSize="30dp"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:background="@color/primary"
                android:textColor="@color/white"
                android:onClick="clickPad"
                android:layout_column="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />
            <TextView
                android:text="8"
                android:textSize="30dp"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:background="@color/primary"
                android:textColor="@color/white"
                android:onClick="clickPad"
                android:layout_column="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />
            <TextView
                android:text="9"
                android:textSize="30dp"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:background="@color/primary"
                android:textColor="@color/white"
                android:onClick="clickPad"
                android:layout_column="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />
        </TableRow>
        <TableRow
            android:gravity="center"

            >
            <TextView
                android:text="확인"
                android:textSize="30dp"
                android:gravity="center"
                android:background="@color/primary"
                android:textColor="@color/white"
                android:onClick="clickPad"
                android:layout_column="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />
            <TextView
                android:text="0"
                android:textSize="30dp"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:background="@color/primary"
                android:textColor="@color/white"
                android:onClick="clickPad"
                android:layout_column="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />
            <TextView
                android:text="X"
                android:textSize="30dp"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:background="@color/primary"
                android:textColor="@color/white"
                android:onClick="clickPad"
                android:layout_column="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />
        </TableRow>

    </TableLayout>






</LinearLayout>