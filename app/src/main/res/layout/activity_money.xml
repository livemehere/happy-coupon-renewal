<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F6F8"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    tools:context=".MoneyActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="12"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"

        >

        <ImageView
            android:layout_weight="6"
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/logo"
            tools:layout_editor_absoluteX="27dp"
            tools:layout_editor_absoluteY="30dp" />

        <Button

            android:id="@+id/btnHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_marginRight="5dp"
            android:onClick="navToHome"
            android:text="홈"
            android:textStyle="bold"
            app:backgroundTint="#FF9960" />

        <Button

            android:id="@+id/btnExit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_marginLeft="5dp"
            android:onClick="finishApp"
            android:text="종료"
            android:textStyle="bold"
            app:backgroundTint="#FF9960" />

    </LinearLayout>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="구매하실 금액을 입력하세요"
        android:gravity="center"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginBottom="40dp"

        />

    <TextView
        android:id="@+id/total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="금액을 입력하세요"
        android:gravity="center"
        android:textSize="30dp"
        android:background="@color/white"
        />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="4"
        android:layout_marginTop="30dp"
        android:useDefaultMargins="true"
        >

        <Button
            android:text="1"
            android:onClick="clickPad"

            android:textSize="30dp"
            android:layout_width="70dp"
            android:layout_gravity="center"
            android:background="@color/primary"
            android:textColor="@color/white"

            />
        <Button
            android:text="2"
            android:onClick="clickPad"
            android:layout_width="70dp"
            android:layout_gravity="center"
            android:textSize="30dp"
            android:background="@color/primary"
            android:textColor="@color/white"
            />
        <Button
            android:text="3"
            android:onClick="clickPad"
            android:layout_width="70dp"
            android:layout_gravity="center"
            android:textSize="30dp"
            android:background="@color/primary"
            android:textColor="@color/white"
            />
        <Button
            android:text="X"
            android:id="@+id/remove"
            android:onClick="clickPad"
            android:layout_width="70dp"
            android:textSize="30dp"
            android:background="@color/primary"
            android:textColor="@color/white"
            android:layout_rowSpan="2"
            android:layout_gravity="fill_vertical"
            />
        <Button
            android:text="4"
            android:onClick="clickPad"
            android:layout_width="70dp"
            android:layout_gravity="center"
            android:textSize="30dp"
            android:background="@color/primary"
            android:textColor="@color/white"
            />
        <Button
            android:text="5"
            android:onClick="clickPad"
            android:layout_width="70dp"
            android:layout_gravity="center"
            android:textSize="30dp"
            android:background="@color/primary"
            android:textColor="@color/white"
            />
        <Button
            android:text="6"
            android:onClick="clickPad"
            android:layout_width="70dp"
            android:layout_gravity="center"
            android:textSize="30dp"
            android:background="@color/primary"
            android:textColor="@color/white"
            />
        <Button
            android:text="7"
            android:onClick="clickPad"
            android:layout_width="70dp"
            android:layout_gravity="center"
            android:textSize="30dp"
            android:background="@color/primary"
            android:textColor="@color/white"
            />
        <Button
            android:text="8"
            android:onClick="clickPad"
            android:layout_width="70dp"
            android:layout_gravity="center"
            android:textSize="30dp"
            android:background="@color/primary"
            android:textColor="@color/white"
            />
        <Button
            android:text="9"
            android:onClick="clickPad"
            android:layout_width="70dp"
            android:layout_gravity="center"
            android:textSize="30dp"
            android:background="@color/primary"
            android:textColor="@color/white"
            />
        <Button
            android:text="확인"
            android:onClick="clickPad"
            android:layout_width="70dp"

            android:textSize="30dp"
            android:background="@color/primary"
            android:textColor="@color/white"
            android:layout_rowSpan="2"
            android:layout_gravity="fill_vertical"
            />
        <Button
            android:text="0"
            android:onClick="clickPad"
            android:layout_width="70dp"
            android:layout_gravity="center"
            android:textSize="30dp"
            android:background="@color/primary"
            android:textColor="@color/white"
            />
        <Button
            android:text="00"
            android:onClick="clickPad"
            android:layout_width="70dp"
            android:layout_gravity="center"
            android:textSize="30dp"
            android:background="@color/primary"
            android:textColor="@color/white"
            />
        <Button
            android:text="000"
            android:onClick="clickPad"
            android:layout_width="70dp"
            android:gravity="center"
            android:textSize="30dp"
            android:background="@color/primary"
            android:textColor="@color/white"
            />


    </GridLayout>


</LinearLayout>